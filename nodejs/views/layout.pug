doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
body
  block navbar
    nav(class='navbar navbar-expand-lg navbar-light bg-light')
      a(class="navbar-brand" href="/") Nodejs App
      ul(class="navbar-nav mr-auto")
        li(class="nav-item")
          a(class="nav-link" href="/books") Books
        li(class="nav-item")
          a(class="nav-link" href="/add") Add a book
  div(class='container-fluid')
    div(class='row')
      div(class='col-sm-10')
        //- Replace individual page content in the block below
        block content
        //- The page footer
        block foot
          //- Render errors in the footer
          if errors
            p
            h3 You have errors:
            ul
              for error in errors
                li.list-group-item-danger= error.msg